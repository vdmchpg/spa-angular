{
  "name": "cdp-courses-app",
  "version": "1.0.0",
  "description": "CDP Courses Application",
  "scripts": {
    "start": "webpack-dev-server --hot --inline --progress --config config/webpack.dev.js",
    "test": "karma start ./config/karma.conf.js",
    "lint": "tslint -c tslint.json ./src/app/*.ts",
    "clean:dist": "rimraf dist/*",
    "copy:assets": "ncp src/assets dist/assets",
    "build:prebuild": "npm run clean:dist && npm run copy:assets",
    "build": "npm run build:prebuild && webpack --config config/webpack.prod.js --progress --profile --bail",
    "build:dev": "npm run build:prebuild && webpack --config config/webpack.dev.js --progress --profile --bail",
    "postinstall": "typings install"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test"
    }
  },
  "author": "Vadym Chepiga",
  "license": "ISC",
  "dependencies": {
    "@angular/common": "~2.2.0",
    "@angular/compiler": "~2.2.0",
    "@angular/core": "~2.2.0",
    "@angular/forms": "~2.2.0",
    "@angular/http": "~2.2.0",
    "@angular/platform-browser": "~2.2.0",
    "@angular/platform-browser-dynamic": "~2.2.0",
    "@angular/router": "~3.2.0",
    "@ng-bootstrap/ng-bootstrap": "1.0.0-alpha.13",
    "angular-in-memory-web-api": "^0.2.4",
    "bootstrap": "^3.3.7",
    "core-js": "^2.4.1",
    "ng2-table": "^1.3.2",
    "rxjs": "^5.0.0-rc.1",
    "zone.js": "^0.6.23"
  },
  "devDependencies": {
    "angular2-router-loader": "^0.3.3",
    "angular2-template-loader": "^0.5.0",
    "awesome-typescript-loader": "~3.0.0-beta.17",
    "codelyzer": "^1.0.0-beta.3",
    "css-loader": "^0.25.0",
    "eslint": "^3.5.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "ghooks": "^1.3.2",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.22.0",
    "jasmine-core": "^2.5.1",
    "karma": "^1.3.0",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.0",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "ncp": "^2.0.0",
    "null-loader": "^0.1.1",
    "phantomjs-prebuilt": "^2.1.12",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "ts-loader": "^0.8.2",
    "tslint": "^3.15.1",
    "typescript": "^2.0.2",
    "typings": "^1.3.3",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.15.2",
    "webpack-merge": "^0.14.1"
  }
}
